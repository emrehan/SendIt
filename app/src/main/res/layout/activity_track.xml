<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.example.emrehantuzun.sendit.TrackActivity" tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="STATUS"
            android:id="@+id/status_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/status"
            android:layout_below="@+id/status_title"
            android:layout_centerHorizontal="true"
            android:textSize="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PICKUP ESTIMATE"
            android:id="@+id/pickup_estimate_title"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/status"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/pickup_estimate"
            android:layout_below="@+id/pickup_estimate_title"
            android:layout_centerHorizontal="true"
            android:textSize="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DROPOFF ESTIMATE"
            android:id="@+id/dropoff_estimate_title"
            android:layout_below="@+id/pickup_estimate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/dropoff_estimate"
            android:layout_below="@+id/dropoff_estimate_title"
            android:layout_centerHorizontal="true"
            android:textSize="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DROPOFF DEADLINE"
            android:id="@+id/dropoff_deadline_title"
            android:layout_below="@+id/dropoff_estimate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/dropoff_deadline"
            android:layout_below="@+id/dropoff_deadline_title"
            android:layout_centerHorizontal="true"
            android:textSize="60dp" />
    </RelativeLayout>
</FrameLayout>
