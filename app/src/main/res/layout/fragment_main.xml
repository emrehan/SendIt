<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/ack">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextView android:text="We will pick your item up &amp;" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/desc1"
        android:textAllCaps="true"
        android:gravity="center_vertical"

        android:background="#32000000"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/desc2"
        android:layout_alignStart="@+id/desc2"
        android:layout_marginTop="125dp"
        android:layout_alignRight="@+id/desc2"
        android:layout_alignEnd="@+id/desc2" />

    <TextView android:text="@string/app_description2" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAllCaps="true"

        android:id="@+id/desc2"
        android:layout_below="@+id/desc1"
        android:layout_centerHorizontal="true"
        android:background="#32000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND IT!"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/button_choose_destination"
        android:textSize="30dp"
        android:onClick="chooseDestination"
        android:padding="20dp"
        android:background="#c8000000"
        android:layout_below="@+id/desc2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

</RelativeLayout>
