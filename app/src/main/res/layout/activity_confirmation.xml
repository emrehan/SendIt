<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/layout1">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/view"
        android:layout_toEndOf="@+id/view"
        android:layout_alignBottom="@+id/view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100 Mins"
            android:textSize="40sp"
            android:id="@+id/duration_value"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DURATION"
            android:textSize="20dp"
            android:id="@+id/time"
            android:layout_gravity="center_horizontal|top"
            android:padding="20dp" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/view"
        android:layout_toStartOf="@+id/view"
        android:layout_alignBottom="@+id/view"
        android:id="@+id/frame">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$69"
            android:textSize="40sp"
            android:id="@+id/fee_value"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEE"
            android:textSize="20dp"
            android:id="@+id/fee"
            android:layout_gravity="center_horizontal|top"
            android:textIsSelectable="true"
            android:paddingTop="20dp" />
    </FrameLayout>



    <View android:layout_height="1dip"
        android:layout_width="fill_parent"
        android:layout_marginTop="135dp"
        android:background="@android:color/transparent"
        android:id="@+id/view2"
        android:focusable="true" />

    <View android:layout_height="135dp"
        android:layout_width="1dp"
        android:background="@android:color/transparent"
        android:id="@+id/view"
        android:layout_alignBottom="@+id/view2"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:hint="ITEM DESCRIPTION"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/number"
            android:layout_alignRight="@+id/number"
            android:padding="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_name"
            android:hint="MY NAME"
            android:layout_below="@+id/description"
            android:layout_alignLeft="@+id/number"
            android:layout_alignRight="@+id/number"
            android:padding="20dp"
            android:gravity="top"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_number"
            android:hint="MY NUMBER (XXX-XXX-XXXX)"
            android:layout_below="@+id/my_name"
            android:layout_alignLeft="@+id/number"
            android:layout_alignRight="@+id/number"
            android:padding="20dp" />
        
        
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="RECIPIENT NAME"
            android:layout_below="@+id/my_number"
            android:layout_alignLeft="@+id/number"
            android:layout_alignRight="@+id/number"
            android:padding="20dp" />

        <EditText
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:hint="RECIPIENT NUMBER (XXX-XXX-XXXX)"
            android:layout_below="@+id/name"
            android:padding="20dp" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/note"
            android:layout_below="@+id/number"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:hint="NOTES"
            android:textAlignment="center"
            android:layout_alignLeft="@+id/number"
            android:layout_alignRight="@+id/number"/>

        <Button
            android:text="CONFIRM"
            android:id="@+id/butConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>


</RelativeLayout>